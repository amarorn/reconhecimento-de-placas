# Variáveis de Ambiente para Desenvolvimento - Arquitetura de Visão Computacional
# =============================================================================

# Configurações da API
ENVIRONMENT=development
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Configurações de Segurança
SECRET_KEY=dev-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Configurações de CORS e Hosts
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Configurações do Banco de Dados
POSTGRES_DB=vision_dev_db
POSTGRES_USER=vision_user
POSTGRES_PASSWORD=dev-postgres-password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://vision_user:dev-postgres-password@postgres:5432/vision_dev_db

# Configurações do Redis
REDIS_PASSWORD=dev-redis-password
REDIS_URL=redis://:dev-redis-password@redis:6379/0

# Configurações do Grafana
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_DOMAIN=http://localhost:3000

# Configurações de Monitoramento
PROMETHEUS_RETENTION_DAYS=7
ELASTICSEARCH_HEAP_SIZE=512m
LOGSTASH_HEAP_SIZE=256m

# Configurações de Backup
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 2 * * *  # Diariamente às 2h da manhã

# Configurações de Logs
LOG_LEVEL=DEBUG
LOG_FORMAT=text
LOG_FILE=/app/logs/app.log

# Configurações de Performance
WORKER_PROCESSES=2
WORKER_CONNECTIONS=512
MAX_REQUESTS=100
MAX_REQUESTS_JITTER=10

# Configurações de Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Configurações de Cache
CACHE_TTL=1800
CACHE_MAX_SIZE=100

# Configurações de Segurança Adicional
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=
ENABLE_HSTS=false
HSTS_MAX_AGE=31536000

# Configurações de Email (para alertas)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=false

# Configurações de Webhook
WEBHOOK_URL=
WEBHOOK_SECRET=dev-webhook-secret

# Configurações de Modelos
MODEL_CACHE_DIR=/app/models
MODEL_UPDATE_INTERVAL=86400  # 24 horas
ENABLE_MODEL_AUTO_UPDATE=true

# Configurações de Armazenamento
STORAGE_TYPE=local
STORAGE_PATH=/app/data
MAX_FILE_SIZE=52428800  # 50MB
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,bmp,tiff

# Configurações de Processamento
MAX_CONCURRENT_PROCESSING=5
PROCESSING_TIMEOUT=600  # 10 minutos
ENABLE_BATCH_PROCESSING=true
BATCH_SIZE_LIMIT=50

# Configurações de Notificações
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SLACK_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#vision-dev

# Configurações de Manutenção
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Sistema em manutenção. Tente novamente em alguns minutos.
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=15

# Configurações de Debug
DEBUG=true
ENABLE_PROFILING=true
ENABLE_METRICS=true
ENABLE_TRACING=true

# Configurações de Rede
NGINX_WORKER_PROCESSES=2
NGINX_WORKER_CONNECTIONS=512
NGINX_KEEPALIVE_TIMEOUT=30
NGINX_CLIENT_MAX_BODY_SIZE=50M

# Configurações de Timezone
TZ=UTC

# Configurações de Locale
LANG=en_US.UTF-8
LC_ALL=en_US.UTF-8

# Configurações de Desenvolvimento
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_TOOLBAR=true
ENABLE_SQL_LOGGING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true