# Variáveis de Ambiente para Produção - Arquitetura de Visão Computacional
# ======================================================================

# Configurações da API
ENVIRONMENT=production
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Configurações de Segurança
SECRET_KEY=CHANGE_THIS_TO_A_VERY_SECURE_SECRET_KEY_IN_PRODUCTION
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Configurações de CORS e Hosts
CORS_ORIGINS=https://seu-dominio.com,https://www.seu-dominio.com
ALLOWED_HOSTS=seu-dominio.com,www.seu-dominio.com,localhost,127.0.0.1

# Configurações do Banco de Dados
POSTGRES_DB=vision_prod_db
POSTGRES_USER=vision_prod_user
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_VERY_SECURE_PASSWORD
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://vision_prod_user:CHANGE_THIS_TO_A_VERY_SECURE_PASSWORD@postgres:5432/vision_prod_db

# Configurações do Redis
REDIS_PASSWORD=CHANGE_THIS_TO_A_VERY_SECURE_REDIS_PASSWORD
REDIS_URL=redis://:CHANGE_THIS_TO_A_VERY_SECURE_REDIS_PASSWORD@redis:6379/0

# Configurações do Grafana
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_TO_A_VERY_SECURE_GRAFANA_PASSWORD
GRAFANA_DOMAIN=https://grafana.seu-dominio.com

# Configurações de Monitoramento
PROMETHEUS_RETENTION_DAYS=30
ELASTICSEARCH_HEAP_SIZE=1g
LOGSTASH_HEAP_SIZE=512m

# Configurações de Backup
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Diariamente às 2h da manhã

# Configurações de Logs
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log

# Configurações de Performance
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1024
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# Configurações de Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Configurações de Cache
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Configurações de Segurança Adicionald
ENABLE_HTTPS=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
ENABLE_HSTS=true
HSTS_MAX_AGE=31536000

# Configurações de Email (para alertas)
SMTP_HOST=smtp.seu-provedor.com
SMTP_PORT=587
SMTP_USER=seu-email@seu-provedor.com
SMTP_PASSWORD=CHANGE_THIS_TO_A_VERY_SECURE_EMAIL_PASSWORD
SMTP_USE_TLS=true

# Configurações de Webhook
WEBHOOK_URL=https://seu-sistema.com/webhook
WEBHOOK_SECRET=CHANGE_THIS_TO_A_VERY_SECURE_WEBHOOK_SECRET

# Configurações de Modelos
MODEL_CACHE_DIR=/app/models
MODEL_UPDATE_INTERVAL=86400  # 24 horas
ENABLE_MODEL_AUTO_UPDATE=false

# Configurações de Armazenamento
STORAGE_TYPE=local  # local, s3, gcs
STORAGE_PATH=/app/data
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,bmp,tiff

# Configurações de Processamento
MAX_CONCURRENT_PROCESSING=10
PROCESSING_TIMEOUT=300  # 5 minutos
ENABLE_BATCH_PROCESSING=true
BATCH_SIZE_LIMIT=100

# Configurações de Notificações
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SLACK_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#vision-alerts

# Configurações de Manutenção
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Sistema em manutenção. Tente novamente em alguns minutos.
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30

# Configurações de Debug
DEBUG=true
ENABLE_PROFILING=false
ENABLE_METRICS=true
ENABLE_TRACING=false

# Configurações de Rede
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024
NGINX_KEEPALIVE_TIMEOUT=65
NGINX_CLIENT_MAX_BODY_SIZE=10M

# Configurações de Timezone
TZ=UTC

# Configurações de Locale
LANG=en_US.UTF-8
LC_ALL=en_US.UTF-8