# Configuração de Produção - Visão Computacional
# ============================================

# Ambiente
ENVIRONMENT=production
DEBUG=true

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Segurança
SECRET_KEY=vision-production-secret-key-2025
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS e Hosts
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# PostgreSQL
POSTGRES_DB=vision_prod_db
POSTGRES_USER=vision_user
POSTGRES_PASSWORD=vision-prod-password-2025

# Redis
REDIS_PASSWORD=vision-redis-password-2025

# Grafana
GRAFANA_ADMIN_PASSWORD=grafana-admin-2025
GRAFANA_DOMAIN=localhost

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logs
LOG_LEVEL=INFO
ENABLE_DETAILED_LOGS=true

# Performance
ENABLE_CACHE=true
CACHE_TTL=3600

# Monitoramento
ENABLE_METRICS=true
METRICS_INTERVAL=30

# Pipeline
YOLO_WEIGHTS_PATH=yolov8n.pt
OCR_LANGUAGE=pt
CONFIDENCE_THRESHOLD=0.5
